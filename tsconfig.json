{
    "compilerOptions": {
      "outDir": "./dist/",
      "sourceMap": true,
      "noImplicitAny": true,
      "module": "commonjs",
      "target": "es6",
      "allowSyntheticDefaultImports": true,
      "declaration": true,
      "esModuleInterop": true,
      "moduleResolution": "node",
      "skipLibCheck": true,
      "experimentalDecorators": true
    },
    "include": [
        "./src"
    ],
    "exclude": [
        "node_modules",
        "./example"
    ]
}
